{
  "name": "@govuk-react/monorepo",
  "scripts": {
    "start": "cd packages/storybook && npm start",
    "bootstrap": "lerna bootstrap",
    "docs": "doc-component './components/**/lib/index.js' './API.md'",
    "docs:components": "lerna run docs --parallel",
    "eslint": "eslint \"./{components,packages}/*/src/**/*.js\"",
    "eslint:fix": "eslint --fix \"./{components,packages}/*/src/**/*.js\"",
    "build": "lerna run build --parallel",
    "build:sync": "lerna run build",
    "build:lib": "lerna run build:lib --parallel",
    "build:es": "lerna run build:es --parallel",
    "build:dist": "yarn build:es && rimraf dist && webpack -p packages/govuk-react/es/index.js --devtool source-map --output-filename index.js",
    "pack": "lerna exec --parallel -- npm pack",
    "watch": "yarn watch:lib",
    "watch:es": "cross-env BABEL_ENV=es lerna exec --ignore @govuk-react/images --parallel -- babel src -d es -w --source-maps",
    "watch:lib": "lerna exec --ignore @govuk-react/images --parallel -- babel src -d lib -w --source-maps",
    "clean": "rimraf lib && rimraf es",
    "bundlesize": "bundlesize",
    "test": "cross-env CI=true yarn test:unit && yarn eslint",
    "test:unit": "jest",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:snapshot": "yarn build && yarn test:unit -u",
    "create-component": "node ./scripts/createComponent.js",
    "build:storybook": "cd packages/storybook && yarn build"
  },
  "description": "A port of the govuk-frontend components for React using styled-components.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "dependencies": {
    "govuk-colours": "^1.1.0",
    "react-markdown": "^4.0.6"
  },
  "peerDependencies": {
    "react": ">=16.2.0"
  },
  "devDependencies": {
    "@babel/cli": "7.13.16",
    "@babel/core": "7.14.2",
    "@babel/node": "7.14.2",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-export-default-from": "^7.12.13",
    "@babel/plugin-proposal-private-methods": "^7.13.0",
    "@babel/plugin-transform-runtime": "7.14.2",
    "@babel/preset-env": "7.14.2",
    "@babel/preset-react": "7.13.13",
    "@storybook/addon-actions": "^5.0.3",
    "@storybook/addon-knobs": "^5.0.3",
    "@storybook/addons": "^5.0.3",
    "@storybook/react": "^5.0.3",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.5.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babel-plugin-styled-components": "^1.12.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "bundlesize": "^0.18.1",
    "can-npm-publish": "1.3.1",
    "chalk": "^2.3.1",
    "codacy-coverage": "^3.0.0",
    "cross-env": "^5.1.3",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-react-app": "^3.0.8",
    "eslint-config-sonar": "0.0.7",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.5.1",
    "final-form": "^4.12.0",
    "jest": "^24.4.0",
    "jest-styled-components": "^7.0.4",
    "jest-transform-stub": "^2.0.0",
    "lerna": "2.11",
    "mkdirp-promise": "^5.0.1",
    "prettier": "^1.16.4",
    "prop-types": "^15.6.0",
    "react": "^16.8.4",
    "react-docgen": "^3.0.0",
    "react-dom": "^16.8.4",
    "react-final-form": "^4.1.0",
    "react-markdown": "^4.0.6",
    "react-router-dom": "^5.0.0",
    "react-use-media": "^0.3.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.3.0",
    "storybook-readme": "^5.0.1",
    "styled-components": "^5.3.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/govuk-react/govuk-react.git"
  },
  "author": "Alasdair McLeay",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/govuk-react/govuk-react/issues"
  },
  "homepage": "https://github.com/govuk-react/govuk-react#readme",
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "120 kB"
    }
  ],
  "workspaces": [
    "components/*",
    "packages/*"
  ],
  "private": true
}
