{
  "name": "govuk-react",
  "version": "0.1.18",
  "scripts": {
    "start": "lerna run --restrict-to @govuk-react/storybook start",
    "docs": "babel-node scripts/docs",
    "eslint": "eslint ./src",
    "eslint:fix": "eslint --fix ./src",
    "build": "lerna run build",
    "build:lib": "rimraf lib && babel src -d lib",
    "build:es": "rimraf es && cross-env BABEL_ENV=es babel src -d es",
    "build:dist": "npm run build:es && webpack -p es/index.js dist/index.js",
    "clean": "rimraf lib && rimraf es",
    "flow": "flow",
    "bundlesize": "bundlesize",
    "test": "cross-env CI=true npm run test:unit && npm run eslint && npm run flow",
    "test:unit": "jest --env=jsdom",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --env=jsdom",
    "test:snapshot": "npm run test:unit -- -u",
    "create-component": "node ./scripts/createComponent.js"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!src/**/stories.js",
      "!src/**/example.js",
      "!src/stories/*",
      "components/*/src/**/*.{js,jsx}",
      "!components/*/node_modules",
      "!components/*/src/**/stories.js",
      "!components/*/src/**/example.js",
      "packages/*/src/**/*.{js,jsx}",
      "!packages/*/node_modules",
      "!packages/storybook",
      "!packages/*/src/**/stories.js",
      "!packages/*/src/**/example.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/scripts/setupTests.js",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)",
      "<rootDir>/components/*/src/**/?(*.)(spec|test).js?(x)",
      "<rootDir>/packages/*/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "snapshotSerializers": [
      "jest-glamor-react",
      "enzyme-to-json/serializer"
    ]
  },
  "description": "A port of the govuk-frontend components for React using styled-components.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "dependencies": {
    "govuk-colours": "^1.0.3"
  },
  "peerDependencies": {
    "glamorous": ">=4",
    "prop-types": ">=15",
    "react": ">=15"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "@babel/node": "^7.0.0-beta.40",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@babel/preset-flow": "^7.0.0-beta.40",
    "@babel/preset-react": "^7.0.0-beta.40",
    "@babel/preset-stage-1": "^7.0.0-beta.40",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-react-remove-prop-types": "^3.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
    "bundlesize": "^0.16.0",
    "chalk": "^2.3.1",
    "component-image": "^1.1.0",
    "cross-env": "^5.1.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-sonar": "0.0.6",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "final-form": "^4.2.0",
    "flow-bin": "^0.66.0",
    "glamorous": "^4.11.2",
    "glob": "^7.1.2",
    "glob-promise": "^3.3.0",
    "jest": "^22.1.2",
    "jest-glamor-react": "^3.3.0",
    "jimp": "^0.2.28",
    "lerna": "2",
    "mkdirp": "^0.5.1",
    "normalize.css": "^8.0.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-docgen": "^3.0.0-beta11",
    "react-dom": "^16.2.0",
    "react-final-form": "^3.1.0",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.2.0",
    "render-glamorous": "0.0.1",
    "rimraf": "^2.6.2",
    "sinon": "^4.2.1",
    "webpack": "^3.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/penx/govuk-react.git"
  },
  "author": "Alasdair McLeay",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/penx/govuk-react/issues"
  },
  "homepage": "https://github.com/penx/govuk-react#readme",
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "120 kB"
    }
  ],
  "workspaces": [
    "components/*",
    "packages/*"
  ],
  "private": true
}
