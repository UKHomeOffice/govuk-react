{
  "parser": "babel-eslint",
  "extends": ["airbnb", "sonar", "prettier", "plugin:flowtype/recommended"],
  "plugins": [
    "prettier",
    "flowtype"
  ],
  "env": {
    "es6": true
  },
  "rules": {
    "prettier/prettier": "error",
    "react/jsx-filename-extension": 0,
    "jsx-a11y/label-has-for": 0,
  },
  "overrides": [
    {
      "files": [ "stories.js", "test.js", "src/stories/index.js", "src/setupTests.js", "scripts/*" ],
      "rules": {
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
      }
    },
    {
      "files": [ "test.js", "setupTests.js" ],
      "env": {
        "jest": true,
        "enzyme": true,
        "browser": true
      }
    }
  ]
}
